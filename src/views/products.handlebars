<h1>Mi Perfil</h1>
<p>Bienvenido!, {{user.first_name}} {{user.last_name}}!</p>
<p>Email: {{user.email}}</p>
<p>Edad: {{user.age}}</p>
<p>Rol: {{user.role}} </p>
<a href="/logout">Logout</a>

<h2>Productos Disponibles:</h2>

<div class="cards">
    {{#each payload}}
        <div class="card">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-price">Price: {{this.price}}</p>
            <p class="card-description">{{this.description}}</p>
            <p class="card-stock" > Stock: {{this.stock}} </p>
            <p> id {{this._id}} </p>
            <form id="cart-form" action="/api/carts/65dbd4c941e59ab1b728fd40/products/{{this._id}}" method="post">
                <button type="submit" id="add-cart">Agregar al carrito</button>
            </form>
        </div>
    {{/each}}
</div>


<div class="pages">
    {{#if hasPrevPages}}
    <a href="/api/products?limit={{limit}}&page={{prevLink}}"> Pagina anterior</a>
    {{/if}}

    <p> {{pages}} </p>

    {{#if hasNextPages}}
    <a href="/api/products?limit={{limit}}&page={{nextLink}}"> Pagina siguiente</a>
    {{/if}}
</div>



